<h4>@LocalizedResources.ChangePasswordComponent_PasswordChange</h4>

<EditForm Model="passwordViewModel" OnValidSubmit="ChangePassword">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="mb-3 row">
        <label class="col-sm-4 col-form-label">@LocalizedResources.ChangePasswordComponent_OldPassword</label>
        <div class="col-sm-8">
            <InputText type="password" @bind-Value="passwordViewModel.OldPassword" class="form-control"/>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-4 col-form-label">@LocalizedResources.ChangePasswordComponent_NewPassword</label>
        <div class="col-sm-8">
            <InputText type="password" @bind-Value="passwordViewModel.NewPassword" class="form-control"/>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-4 col-form-label">@LocalizedResources.ChangePasswordComponent_NewPasswordRepeat</label>
        <div class="col-sm-8">
            <InputText type="password" @bind-Value="passwordViewModel.NewPasswordRepeat" class="form-control"/>
        </div>
    </div>

    <div class="row">
        <div class="d-flex justify-content-end col">
            <button class="w-50 btn btn-primary" type="submit">@LocalizedResources.ChangePasswordComponent_SubmitPasswordChange</button>
        </div>
    </div>
</EditForm>