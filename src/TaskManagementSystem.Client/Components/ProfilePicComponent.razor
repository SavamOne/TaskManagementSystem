<svg style="width: @(Size)px; height: @(Size)px;overflow: initial;" width="1050" height="1050" viewBox="0 0 1050 1050" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect rx="150" ry="150" width="1050" height="1050" fill="@(HexColor)"/>
  <text x="50%" y="53%" alignment-baseline="middle" text-anchor="middle" font-size="500" fill="#fff" font-family="Helvetica, Arial, sans-serif" font-weight="bold">@(Letters)</text>
</svg>

@code {
  [Parameter]
  public string? Username { get; set; }

  [Parameter]
  public int Size { get; set; } = 40;

  private string HexColor => StringHelper.GetHexColorForText(Username);

  private string Letters => new(StringHelper.GetFirstLetters(Username).Take(2).ToArray());
}
